{% extends 'base.html.twig' %}

{% block title %}Hello LieuxController!{% endblock %}

{% block body %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .manif-card {display: flex; flex-direction: column; flex-wrap: wrap; border: 0.4px solid black; padding: 5px;}
    .container-manif-card {
        display: flex;
        flex-wrap: wrap;
    }
    .container-manif-card>* {
        flex: 1 1 25%;

    }
</style>

<div class="container-manif-card">
    {% for lieu in allLieux %}
            <div class="manif-card">
                <h1>{{lieu.getLieuNom}}</h1>
                <p>Capacit√© max : {{lieu.getLieuCapacite}}</p>
                <ul>{% for manif in lieu.getManifestations %}
                    <li>{{ manif.getManifTitre }}</li>
                {% endfor %}</ul>
            </div>
    {% endfor %}
</div>
{% endblock %}
